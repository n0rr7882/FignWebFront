extends layout

block content
	#contents(style="visibility:hidden;opacity:0")
		.register-layout
			.fign.fign-up
			form#register-form
				input(type="text", name="name", placeholder="이름")
				input(type="text", name="id", placeholder="아이디")
				input(type="password", name="password", placeholder="비밀번호")
				input(type="text", name="familykey", placeholder="가족코드")
				select(name="type")
					option(value="엄마") 엄마
					option(value="아빠") 아빠
					option(value="자녀") 자녀
				button(id="submit", type="button") 회원가입
			script(src="/javascripts/register.js")